@using PayItForward.Models
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Selling &mdash; Website by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,700,900" rel="stylesheet">
    <link rel="stylesheet" href="Styles/ventaHome/fonts/icomoon/style.css">

    <link rel="stylesheet" href="Styles/ventaHome/css/bootstrap.min.css">
    <link rel="stylesheet" href="Styles/ventaHome/css/jquery-ui.css">
    <link rel="stylesheet" href="Styles/ventaHome/css/owl.carousel.min.css">
    <link rel="stylesheet" href="Styles/ventaHome/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="Styles/ventaHome/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="Styles/ventaHome/css/jquery.fancybox.min.css">

    <link rel="stylesheet" href="Styles/ventaHome/css/bootstrap-datepicker.css">

    <link rel="stylesheet" href="Styles/ventaHome/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="Styles/ventaHome/css/aos.css">

    <link rel="stylesheet" href="Styles/ventaHome/css/style.css">

</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    <div class="site-section" id="products-section">
        <div class="container">
            <div class="row mb-5 justify-content-center">
                <div class="col-md-6 text-center">
                    <h3 class="section-sub-title">Pay it Forward</h3>
                    <h2 class="section-title mb-3">Productos Populares</h2>
                    <p>Las publicaciones más populares entre los usuarios de Pay it Forward</p>
                </div>
            </div>
            @{ int cont = 0; }
            @foreach (Publicacion publicacion in ViewBag.Publicaciones)
            {
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-5">
                        <div class="product-item">
                            <figure>
                                <img src="@Url.Content(ViewBag.imagenesPublicacion[cont])" alt="Image" class="img-fluid"> <!--IMAGEN-->
                            </figure>
                            <div class="px-4">
                                <h3><a href="#">@publicacion.Titulo</a></h3> <!--NOMBRE-->
                                <div class="mb-3">
                                    <span class="meta-icons wishlist"><a href="#" class="mr-2"><span class="icon-heart"></span></a>♥ @publicacion.Likes</span> <!--LIKES-->
                                </div>
                                <p class="mb-4">@publicacion.Descripcion</p> <!--DESCRIPCION-->
                                <div>
                                    <a href="#" class="btn btn-black mr-1 rounded-0">Carrito</a>
                                    <a href="#" class="btn btn-black btn-outline-black ml-1 rounded-0">Ver</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                cont++;
            }
        </div>
    </div>

    <div class="site-section bg-light">
        <div class="container">
            <div class="row mb-5 justify-content-center">
                <div class="col-md-6 text-center">
                    <h3 class="section-sub-title">Pay it Forward</h3>
                    <h2 class="section-title mb-3">Productos destacados</h2>
                    <p>Las publicaciones más destacadas de la semana</p>
                </div>
            </div>
            @foreach (Publicacion publicacion in ViewBag.Publicaciones)
            {
                if (publicacion.Destacada == true)
                {
                    <div class="bg-white py-4 mb-4">
                        <div class="row mx-4 my-4 product-item-2 align-items-start">
                            <div class="col-md-6 mb-5 mb-md-0">
                                <img src="images/model_1_bg.jpg" alt="Image" class="img-fluid">
                            </div>

                            <div class="col-md-5 ml-auto product-title-wrap">
                                <h3 class="text-black mb-4 font-weight-bold">Sobre el producto</h3>
                                <p class="mb-4">@publicacion.Descripcion</p> <!--DESCRIPCION-->

                                <div class="mb-4">
                                    <h3 class="text-black font-weight-bold h5">Precio:</h3>
                                    <div class="price">@publicacion.Valor Puntos</div> <!--PRECIO-->
                                </div>
                                <p>
                                    <a href="#" class="btn btn-black btn-outline-black rounded-0 d-block mb-2 mb-lg-0 d-lg-inline-block">Ver Detalles</a>
                                    <a href="#" class="btn btn-black rounded-0 d-block d-lg-inline-block">Agregar Al Carrito</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>

    <script src="Styles/ventaHome/js/jquery-3.3.1.min.js"></script>
    <script src="Styles/ventaHome/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="Styles/ventaHome/js/jquery-ui.js"></script>
    <script src="Styles/ventaHome/js/popper.min.js"></script>
    <script src="Styles/ventaHome/js/bootstrap.min.js"></script>
    <script src="Styles/ventaHome/js/owl.carousel.min.js"></script>
    <script src="Styles/ventaHome/js/jquery.stellar.min.js"></script>
    <script src="Styles/ventaHome/js/jquery.countdown.min.js"></script>
    <script src="Styles/ventaHome/js/bootstrap-datepicker.min.js"></script>
    <script src="Styles/ventaHome/js/jquery.easing.1.3.js"></script>
    <script src="Styles/ventaHome/js/aos.js"></script>
    <script src="Styles/ventaHome/js/jquery.fancybox.min.js"></script>
    <script src="Styles/ventaHome/js/jquery.sticky.js"></script>


    <script src="Styles/ventaHome/js/main.js"></script>

</body>
</html>