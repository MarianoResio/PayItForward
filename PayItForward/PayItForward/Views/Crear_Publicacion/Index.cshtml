@using PayItForward.Models;

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        .Categorias {
            background-color: white;
            border: 2px solid lightgrey;
            height: 250px;
            width: 150px;
            border-radius: 4px;
            margin-top: 50px;
            margin-bottom: 50px;
            margin-right: 10px;
        }
        .Productos :hover {
            border: 2px solid #21bd4b;
        }
        .Servicios :hover {
            border: 2px solid #bd2121;
        }
        form {
            width: fit-content;
            margin-left: auto;
            margin-right: auto;
            display: inline-block;
        }
        .contenedor-categorias {
            width: fit-content;
            margin-left: auto;
            margin-right: auto;
            display: inline-block;
            margin-left: 37%;
        }
    </style>
</head>

<body>
    <div style="background-color:white">
        <!--LAYOUT: elegi una categoria > descripcion(imagenes, nombre, etc.) > precio y cantidad > confirmar-->
        <div>

        </div>
        <!--DIV CENTRADO: contiene las dos categorias padre-->
        <div class="contenedor-categorias">
            @foreach (Categorias X in ViewBag.Lista)
            {
                <form action="@Url.Action(X.Nombre, "Crear_Publicacion")">
                    <button type="submit" class="@X.Nombre Categorias">
                        <span>@X.Nombre</span> <br />
                        <img src="~/Content/ImagenesCategoria/@X.Imagen" />
                    </button>
                </form>
            }
        </div>
    </div>
    
</body>